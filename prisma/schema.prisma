generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int         @id @default(autoincrement())
  email               String      @unique
  name                String?
  lastName            String
  phone               String      @unique
  credit              Int         @default(0)
  password            String
  avatar              String      @default("/images/avatars/EJCj0hJ5N4Ki940uwZyk--3--syi4d.jpg")
  userName            String      @unique
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  challenges          Challenge[] @relation("UserChallenges")
  acceptedChallenges  Challenge[] @relation("UserAcceptedChallenges")
}

model Challenge {
  id              Int   @id @default(autoincrement())
  challengerId    Int
  accepterId      Int?
  gameName        String
  consoleType     String
  challengeAmount Int
  resultPhoto     String[]
  winner          String[]
  createdAt       DateTime @default(now())
   

  challenger      User     @relation("UserChallenges", fields: [challengerId], references: [id])
  accepter        User?    @relation("UserAcceptedChallenges", fields: [accepterId], references: [id])
}