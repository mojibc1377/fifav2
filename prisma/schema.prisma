generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int         @id @default(autoincrement())
  email               String      @unique
  name                String?
  lastName            String
  phone               String      @unique
  credit              Int         @default(0)
  password            String
  avatar              String      @default("/images/avatars/EJCj0hJ5N4Ki940uwZyk--3--syi4d.jpg")
  userName            String      @unique
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  isAdmin    Boolean      @default(false)



  challenges          Challenge[] @relation("UserChallenges")
  acceptedChallenges  Challenge[] @relation("UserAcceptedChallenges")
  transactions        Transaction[]  @relation("UserTransactions")

  submissions         Submission[]
}

model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Int
  timestamp DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], name: "UserTransactions")

}

model Challenge {
  id              Int       @id @default(autoincrement())
  challengerId    Int
  accepterId      Int?
  gameName        String
  consoleType     String
  challengeAmount Int
  mode            String    @default("")
  resultPhoto     String[]
  winner          String[]
  messages        Json[]    @default([])
  createdAt       DateTime  @default(now())

  challenger      User      @relation("UserChallenges", fields: [challengerId], references: [id])
  accepter        User?     @relation("UserAcceptedChallenges", fields: [accepterId], references: [id])

  
}

model Reward {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  amount          Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  submittedUserIds Int[]     @default([])  // Add this line

  submissions     Submission[]
}

model Submission {
  id              Int      @id @default(autoincrement())
  userId          Int
  rewardId        Int
  screenshot      String
  approved        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
  reward          Reward   @relation(fields: [rewardId], references: [id])
}